<resources>

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button">
        <!--
            此处的 name 为 View Attributes ，
            数值为对应的资源（类型可以为：Attribute,Boolean,Color,Dimension,Drawable,Float,Font,Fraction,String）
        -->
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">11dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Center_Horizontal">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>
</resources>